# TMC Studio Environment Variables
# Copy this file to .env.local and fill in your values

# =====================================================
# FRONTEND (Vite - prefix VITE_)
# =====================================================

# Supabase Configuration (Public)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe (Public - publishable key)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# =====================================================
# NETLIFY FUNCTIONS (Server-side only)
# Set these in Netlify Dashboard > Site Settings > Environment Variables
# =====================================================

# Supabase (Service Role - has admin access, NEVER expose to frontend!)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe (Secret keys - NEVER expose to frontend!)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =====================================================
# OPTIONAL
# =====================================================

# Analytics
# VITE_MIXPANEL_TOKEN=xxx

# Sentry (Error tracking)
# VITE_SENTRY_DSN=xxx

# Feature Flags
# VITE_ENABLE_REALTIME=true
